<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Course</title>
    <style>
        body {
            background: linear-gradient(135deg, #80c8f9, #9b59b6);
            /* Contoh gradien warna */
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
            margin: 20px auto;
            max-width: 600px;
            max-height: 500px;
            overflow-y: auto;
        }
    </style>
</head>
<%- include('navbar3') %>

    <body>
        <div class="container">

            <h1>Edit Course</h1>
            <form method="post" action="">
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01">Name</label>
                    <input value="<%= data.name %>" type="text" class="form-control" aria-describedby="emailHelp"
                        name="name" required>
                </div>

                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01">Duration</label>
                    <input value="<%= data.duration %>" type="text" class="form-control" aria-describedby="emailHelp"
                        name="duration" required>
                </div>
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01">Material</label>
                    <input value="<%= data.material %>" type="text" class="form-control" aria-describedby="emailHelp"
                        name="material" required>
                </div>
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01">Description</label>
                    <input value="<%= data.description %>" type="text" class="form-control" aria-describedby="emailHelp"
                        name="description" required>
                </div>

                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01">Category</label>
                    <select name="CategoryId" class="form-select" id="inputGroupSelect01" required>
                        <% categories.forEach(element=> { %>
                            <option <%=element.id === data.CategoryId ? "selected" : "" %> value = "<%=element.id %>">
                                    <%=element.name %>
                            </option>
                            <% }) %>
                    </select>

                </div>

                <button class="btn glass">Submit</button>
            </form>
        </div>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <%- include('_script') %>
    </body>

</html>