<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Course</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        html, body {
            background: linear-gradient(135deg, #3498db, #9b59b6);
            height: 100%;
            margin: 0;
            padding: 0;
        }
        body {
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa; /* Warna background */
        }
        .container {
            flex: 1;
            width: 60%; 
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            max-height: 500px;
        }
        .btn.glass {
            background-color: rgba(255, 255, 255, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            color: #000;
        }
    </style>
</head>

<body>
    <%- include('navbar3') %>

    <div class="container">
        <h1>Add New Course</h1>
        <form method="post" action="/admin/addCourse">
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Name</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" name="name" required>
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Duration in minute</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" name="duration" required>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">Material</span>
                <textarea class="form-control bg-light" id="material" name="material" rows="5" required></textarea>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">Description</span>
                <textarea class="form-control bg-light" id="description" name="description" rows="5" required></textarea>
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Category</label>
                <select name="CategoryId" class="form-select" id="inputGroupSelect01">
                    <option selected disabled value="">-- Choose --</option>
                    <% data.forEach(e => { %>
                    <option value="<%= e.id %>"><%= e.name %></option>
                    <% }) %>
                </select>
            </div>

            <button type="submit" class="btn glass">Submit</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <%- include('_script') %>
</body>

</html>